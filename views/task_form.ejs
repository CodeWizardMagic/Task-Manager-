<%- include('partials/header', { title: 'Create Task', user }) %>
<link rel="stylesheet" href="/css/styles.css">

<div class="container" style="max-width: 500px; margin: auto; padding: 20px;">
  <h1 class="mb-4 text-center"><%= task._id ? "Edit Task" : "Create Task" %></h1>

  <form action="<%= task._id ? '/tasks/edit/' + task._id : '/tasks' %>" method="POST" class="d-grid gap-3">
    <div>
      <label for="title" class="form-label">Task Title:</label>
      <input type="text" name="title" id="title" required class="form-control"
       placeholder="Enter task title" value="<%= task.title || '' %>">
    </div>

    <div>
      <label for="description" class="form-label">Description:</label>
      <textarea name="description" id="description" class="form-control" rows="3"
       placeholder="Describe the task..."><%= task.description || '' %></textarea>
    </div>

    <div>
      <label for="priority" class="form-label">Priority:</label>
      <select name="priority" id="priority" class="form-select">
        <option value="low" <%= task.priority === 'low' ? 'selected' : '' %>>Low</option>
        <option value="medium" <%= task.priority === 'medium' ? 'selected' : '' %>>Medium</option>
        <option value="high" <%= task.priority === 'high' ? 'selected' : '' %>>High</option>
      </select>
    </div>

    <div>
      <label for="status" class="form-label">Status:</label>
      <select name="status" id="status" class="form-select">
        <option value="pending" <%= task.status === 'pending' ? 'selected' : '' %>>Pending</option>
        <option value="in progress" <%= task.status === 'in progress' ? 'selected' : '' %>>In Progress</option>
        <option value="completed" <%= task.status === 'completed' ? 'selected' : '' %>>Completed</option>
      </select>
    </div>

    <div>
      <label for="dueDate" class="form-label">Due Date & Time:</label>
      <input type="datetime-local" name="dueDate" id="dueDate" class="form-control"
       value="<%= task.dueDate ? new Date(task.dueDate).toISOString().slice(0, 16) : '' %>">
    </div>

    <button type="submit" class="btn btn-primary w-100">
      <%= task._id ? "Update Task" : "Create Task" %>
    </button>
  </form>

  <a href="/tasks" class="btn btn-secondary w-100 mt-3">Back to Tasks</a>
</div>

<%- include('partials/footer') %>
